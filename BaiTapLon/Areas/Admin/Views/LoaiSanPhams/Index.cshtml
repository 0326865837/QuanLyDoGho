@model IEnumerable<BaiTapLon.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Loại sản phẩm</h2>
<br />
<hr />
<p>
    @Html.ActionLink("Thêm loại sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tenloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mota)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tenloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Maloai.Trim() }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Maloai.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Maloai.Trim() })
            </td>
        </tr>
    }

</table>
