
@{
    ViewBag.Title = "QuenMatKhau";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h1 class="heading-section"><b>Khôi phục mật khẩu</b></h1>
                <p style="margin-left: 0px; margin-top: 20px;color:black;">Nhập tên đăng nhập và địa chỉ email của bạn và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu của bạn</p>
            </div>
        </div>
        <div class="row justify-content-center " style="margin-top:-50px;">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <form action="#" class="signin-form">
                        <p style="margin-left:60px;">Chưa có tài khoản?<a href="@Url.Action("DangKy","Login")" style="color: #fff"><b>Đăng ký ngay!</b></a></p>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Tên đăng nhập">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Địa chỉ Email">
                        </div>

                        <div class="form-group" style="margin-top: 20px;">
                            <a href="@Url.Action("DangNhap","Login")" class="form-control btn btn-primary submit px-3"><p style="margin-top:5px;">Cài lại mật khẩu</p></a>
                        </div>
                        <p style="margin-left:85px;"><a href="@Url.Action("DangNhap","Login")" style="color: #fff"><b>Quay về trang đăng nhập !</b></a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>
