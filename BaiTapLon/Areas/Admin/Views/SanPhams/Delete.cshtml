@model BaiTapLon.Areas.Admin.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa sản phẩm</h2>
<br />

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LoaiSanPham.Tenloai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiSanPham.Tenloai)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tensanpham)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tensanpham)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Kichthuoc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Kichthuoc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Chatlieu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Chatlieu)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Dongia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dongia)
        </dd>

        <dd>
            @{
                //Lấy đường dẫn file ảnh
                string ImagePath = "~/Areas/Admin/wwwroot/Images/" + Model.Anh;
            }
            <img src="@Url.Content(ImagePath)" width="300" class="img-thumbnail" />
            <br />
            @Html.HiddenFor(model => model.Anh)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Soluongton)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mota)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

    </dl>
    <br/>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button>
                <input type="submit" value="Xóa" class="btn btn-default" /> </button> |
            <button>@Html.ActionLink("Quay lại", "Index")</button>
</div>
    }
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}