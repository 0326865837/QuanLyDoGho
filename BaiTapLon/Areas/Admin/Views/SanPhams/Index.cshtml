@model IEnumerable<BaiTapLon.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sản phẩm</h2><br/>
 <hr />
<p>
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Tensanpham)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Dongia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluongton)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Tensanpham)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Dongia)
        </td>
        <td>
            @{
                //Lấy đường dẫn file ảnh
                string ImagePath = "~/Areas/Admin/wwwroot/Images/" + item.Anh;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            <br />
            @Html.DisplayFor(modelItem => item.Anh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluongton)
        </td>
       
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Masanpham.Trim() }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Masanpham.Trim() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Masanpham.Trim() })
        </td>
    </tr>
}

</table>
