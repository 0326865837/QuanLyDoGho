@model BaiTapLon.Areas.Admin.Models.HoaDon

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa trạng thái đơn hàng</h2><br/>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Mahoadon)

    <div class="form-group">
        <b> @Html.HiddenFor(model => model.Mahoadon, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            <div class="col-md-10">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Mahoadon)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Mahoadon)
                    </dd>
                </dl>
            </div>
            @Html.HiddenFor(model => model.Mahoadon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mahoadon, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <b> @Html.HiddenFor(model => model.Mataikhoan, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            
            @Html.HiddenFor(model => model.Mataikhoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mataikhoan, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <b>@Html.LabelFor(model => model.Trangthai, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            <select class="form-control" id="Trangthai" name="Trangthai">
                <option></option>
                <option>Đã thanh toán</option>
                <option>Chưa thanh toán</option>
            </select>
            @Html.ValidationMessageFor(model => model.Trangthai, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button><input type="submit" value="Lưu" class="btn btn-default" /></button>
</div>
    </div>
</div>
}

<div>
    <button> @Html.ActionLink("Quay lại", "Index")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
